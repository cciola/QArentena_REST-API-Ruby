source 'https://rubygems.org' # onde as gems serão buscadas

gem 'cucumber' # gem que faz a interface da documentação com o código ruby https://cucumber.io/
gem 'factory_bot' # gem que ajuda na criação payload (o corpo das requisições que enviaremos para a API) https://github.com/thoughtbot/factory_bot
gem 'faker' # gem que gera dados fake https://github.com/faker-ruby/faker
gem 'httparty' # gem responsável pelas requisições de web services https://github.com/jnunemaker/httparty
gem 'rspec' # gem que permite fazer as asserções https://rspec.info/